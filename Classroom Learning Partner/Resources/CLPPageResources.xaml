<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vmpo="clr-namespace:Classroom_Learning_Partner.ViewModels.PageObjects"
                    xmlns:vwpo="clr-namespace:Classroom_Learning_Partner.Views.PageObjects"
                    xmlns:vm="clr-namespace:Classroom_Learning_Partner.ViewModels"
                    xmlns:vw="clr-namespace:Classroom_Learning_Partner.Views">
    <ItemsPanelTemplate x:Key="PanelTemplate">
        <Canvas Width="816" Height="1056" Background="Transparent" />
    </ItemsPanelTemplate>

    <Style x:Key="ContainerStyle">
        <Setter Property="Canvas.Left"
                Value="{Binding Position.X}" />
        <Setter Property="Canvas.Top"
                Value="{Binding Position.Y}" />
    </Style>

    <Geometry x:Key="CloseX">M0,0 L1,1 M0,1 L1,0</Geometry>


    <DataTemplate DataType="{x:Type vm:PageObjectContainerViewModel}">
        <vw:PageObjectContainerView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vmpo:CLPTextBoxViewModel}">
        <vwpo:CLPTextBoxView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vmpo:CLPImageViewModel}">
        <vwpo:CLPImageView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vmpo:CLPStampViewModel}">
        <vwpo:CLPStampView />
    </DataTemplate>

</ResourceDictionary>