<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:vm="clr-namespace:Classroom_Learning_Partner.ViewModels"
                    xmlns:vw="clr-namespace:Classroom_Learning_Partner.Views"
                    xmlns:wvm="clr-namespace:Classroom_Learning_Partner.ViewModels.Workspaces"
                    xmlns:wvw="clr-namespace:Classroom_Learning_Partner.Views.Workspaces"
                    xmlns:dvm="clr-namespace:Classroom_Learning_Partner.ViewModels.Displays"
                    xmlns:dvw="clr-namespace:Classroom_Learning_Partner.Views.Displays"
                    >

    <!--DataTemplates for WorkspaceViewModels-->
    
    <DataTemplate DataType="{x:Type wvm:BlankWorkspaceViewModel}">
        <wvw:BlankWorkspaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type wvm:NotebookChooserWorkspaceViewModel}">
        <wvw:NotebookChooserWorkspaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type wvm:AuthoringWorkspaceViewModel}">
        <wvw:AuthoringWorkspaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type wvm:InstructorWorkspaceViewModel}">
        <wvw:InstructorWorkspaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type wvm:StudentWorkspaceViewModel}">
        <wvw:StudentWorkspaceView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type wvm:ProjectorWorkspaceViewModel}">
        <wvw:ProjectorWorkspaceView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type wvm:ServerWorkspaceViewModel}">
        <wvw:ServerWorkspaceView />
    </DataTemplate>

    <!--DataTemplates for DisplayViewModels-->

    <DataTemplate DataType="{x:Type dvm:LinkedDisplayViewModel}">
        <dvw:LinkedDisplayView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type dvm:GridDisplayViewModel}">
        <dvw:GridDisplayView />
    </DataTemplate>

    <!--DataTemplates for Other ViewModels-->

    <DataTemplate DataType="{x:Type vm:NotebookSelectorViewModel}">
        <vw:NotebookSelectorView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CLPPageViewModel}">
        <vw:CLPPageView/>
    </DataTemplate>
    
    <!--Visual Datatemplates-->

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <ScrollViewer CanContentScroll="False">
                        <ScrollViewer.Resources>
                            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">25</sys:Double>
                        </ScrollViewer.Resources>
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>







</ResourceDictionary>