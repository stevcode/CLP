<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModels="clr-namespace:Classroom_Learning_Partner.ViewModels"
                    xmlns:Views="clr-namespace:Classroom_Learning_Partner.Views">

    <!--DataTemplates for Other ViewModels-->

    <DataTemplate DataType="{x:Type ViewModels:CLPPageViewModel}">
        <Views:CLPPageView />
    </DataTemplate>

    <Style x:Key="StatusBarText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Segoe" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Margin" Value="5,0" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
    </Style>

</ResourceDictionary>