<catel:UserControl x:Class="Classroom_Learning_Partner.Views.ProgressPanelView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                   xmlns:conv="clr-namespace:Classroom_Learning_Partner.Converters"
                   xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <catel:BooleanToHidingVisibilityConverter x:Key="BooleanToHidingVisibilityConverter" />
            <conv:PageToSubmissionsListConverter x:Key="PageToSubmissionsListConverter" />
            <conv:PageToStarredVisibilityConverter x:Key="PageToStarredVisibilityConverter" />
            <conv:PageToSubmissionVisibilityConverter x:Key="PageToSubmissionVisibilityConverter" />
            <conv:PanelLocationToThicknessConverter x:Key="PanelLocationToThicknessConverter" />
            <conv:PageMatchToColorConverter x:Key="PageMatchToColorConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="{StaticResource GrayBackgroundColor}"
            BorderBrush="{StaticResource GrayEdgeColor}"
            BorderThickness="{Binding Location, Converter={StaticResource PanelLocationToThicknessConverter}, ConverterParameter=7.0}"
            Width="{Binding Length}">
        <Grid>
            <!-- content and resizing thumb-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <!-- names and pages -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/> <!-- combobox-->
                    <RowDefinition Height="30"/> <!-- page numbers-->
                    <RowDefinition Height="24"/> <!-- teacher pages -->
                    <RowDefinition Height="*"/> <!-- student pages -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.ColumnSpan="2" Height="30" Width="170"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Content="Choose Class Period" Margin="10"
                    Command="{Binding ChooseClassPeriodCommand}" />
                <TextBlock Grid.Column="0" Grid.Row="2" FontWeight="Bold" Foreground="Blue" Height="24" Margin="5 0 0 0">
                    <Run Text="Teacher"/>
                </TextBlock>
                <ItemsControl Grid.Column="0" Grid.Row="3"
                              ItemsSource="{Binding StudentList}"
                              Margin="5 0 0 0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="10"
                                         Width="10"
                                         Fill="LawnGreen"
                                         Visibility="{Binding IsConnected, Converter={StaticResource BooleanToHidingVisibilityConverter}}"/>
                                <TextBlock FontWeight="Bold" Height="24">
                                    <Run Text="{Binding FullName}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ScrollViewer Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" 
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Hidden">
                    <ScrollViewer.Resources>
                        <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">25</sys:Double>
                    </ScrollViewer.Resources>
                    <ItemsControl Name="Pages" ItemsSource="{Binding CurrentPages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="*"  />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    <Run Text="{Binding PageNumber}" />
                                </TextBlock>
                                <Border Grid.Row="1" Margin="3"
                                        BorderBrush="{StaticResource GrayEdgeColor}"
                                        BorderThickness="1,1,1,1">
                                    <Rectangle Grid.Row="0" Margin="0" Fill="White" StrokeThickness="2" Height="16" Width="32">
                                        <Rectangle.Stroke>
                                            <MultiBinding Converter="{StaticResource PageMatchToColorConverter}">
                                                <Binding ElementName="Pages" Path="DataContext.CurrentPage"/>
                                                <Binding Path=""/>
                                            </MultiBinding>
                                        </Rectangle.Stroke>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseUp">
                                                <catel:EventToCommand Command="{Binding DataContext.SetCurrentPageCommand, ElementName=Pages}"
                                                                                      PassEventArgsToCommand="False"
                                                                                      CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Rectangle>
                                </Border>
                                <ItemsControl Grid.Row="2" ItemsSource="{Binding Converter={StaticResource PageToSubmissionsListConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="3"
                                                    BorderBrush="{StaticResource GrayEdgeColor}"
                                                    BorderThickness="1,1,1,1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Image Grid.Column="0"
                                                               Source="pack://application:,,,/Resources/Images/YellowStar16.png"
                                                               Visibility="{Binding Converter={StaticResource PageToStarredVisibilityConverter}}" />

                                                        <Image Grid.Column="1"
                                                               Source="pack://application:,,,/Resources/Images/BlueEnvelope16.png"
                                                               Visibility="{Binding Converter={StaticResource PageToSubmissionVisibilityConverter}}" />
                                                    </Grid>
                                                    <Rectangle Grid.Row="0" Margin="0" Fill="Transparent" StrokeThickness="2">
                                                        <Rectangle.Stroke>
                                                            <MultiBinding Converter="{StaticResource PageMatchToColorConverter}">
                                                                <Binding ElementName="Pages" Path="DataContext.CurrentPage"/>
                                                                <Binding Path="Page"/>
                                                            </MultiBinding>
                                                        </Rectangle.Stroke>
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseUp">
                                                                <catel:EventToCommand Command="{Binding DataContext.SetCurrentPageCommand, ElementName=Pages}"
                                                                                      PassEventArgsToCommand="False"
                                                                                      CommandParameter="{Binding Page}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Rectangle>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!--Thumb Cursor="ScrollWE" Width="5" 
            <Thumb Cursor="ScrollWE"
                   Width="7"
                   Margin="0 0 -7 0"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Right">
