<catel:UserControl x:Class="Classroom_Learning_Partner.Views.ProgressPanelView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                   xmlns:conv="clr-namespace:Classroom_Learning_Partner.Converters">
    
    <UserControl.Resources>
        <conv:SubmissionsListForPageByStudentConverter x:Key="SubmissionsListForPageByStudentConverter" />
        <conv:PageToStarredVisibilityConverter x:Key="PageToStarredVisibilityConverter" />
        <conv:PageToSubmissionVisibilityConverter x:Key="PageToSubmissionVisibilityConverter" />
        <conv:PanelLocationToThicknessConverter x:Key="PanelLocationToThicknessConverter" />
            <conv:PageMatchToColorConverter x:Key="PageMatchToColorConverter" />
    </UserControl.Resources>
    
    <Border Background="{StaticResource GrayBackgroundColor}"
            BorderBrush="{StaticResource GrayEdgeColor}"
            BorderThickness="{Binding Location, Converter={StaticResource PanelLocationToThicknessConverter}, ConverterParameter=7.0}"
            Width="{Binding Length}">
        <Grid>
            <!-- content and resizing thumb-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <!-- names and pages -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ItemsControl Grid.Column="0"
                              ItemsSource="{Binding StudentList}"
                              Margin="5 30 0 0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold"
                                       Height="24">
                                <Run Text="{Binding Mode=OneWay}" />
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl Name="Pages"
                              Grid.Column="1"
                              ItemsSource="{Binding CurrentPages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    <Run Text="{Binding PageNumber}" />
                                </TextBlock>
                                <ItemsControl Grid.Row="1">
                                    <ItemsControl.ItemsSource>
                                        <MultiBinding Converter="{StaticResource SubmissionsListForPageByStudentConverter}">
                                            <Binding ElementName="Pages"
                                                     Path="DataContext.Notebook.Submissions" />
                                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}"
                                                     Path="DataContext.StudentList" />
                                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}"
                                                     Path="DataContext.Notebook" />
                                            <Binding Path="UniqueID" />
                                        </MultiBinding>
                                    </ItemsControl.ItemsSource>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="3"
                                                    BorderBrush="{StaticResource GrayEdgeColor}"
                                                    BorderThickness="1,1,1,1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Image Grid.Column="0"
                                                               Source="pack://application:,,,/Resources/Images/YellowStar16.png"
                                                               Visibility="{Binding Converter={StaticResource PageToStarredVisibilityConverter}}" />

                                                        <Image Grid.Column="1"
                                                               Source="pack://application:,,,/Resources/Images/BlueEnvelope16.png"
                                                               Visibility="{Binding Converter={StaticResource PageToSubmissionVisibilityConverter}}" />
                                                    </Grid>
                                                    <Rectangle Grid.Row="0" Margin="0" Fill="Transparent" StrokeThickness="2">
                                                        <Rectangle.Stroke>
                                                            <MultiBinding Converter="{StaticResource PageMatchToColorConverter}">
                                                                <Binding ElementName="Pages" Path="DataContext.CurrentPage"/>
                                                                <Binding Path=""/>
                                                            </MultiBinding>
                                                        </Rectangle.Stroke>
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseUp">
                                                                <catel:EventToCommand Command="{Binding DataContext.SetCurrentPageCommand, ElementName=Pages}"
                                                                                      PassEventArgsToCommand="False"
                                                                                      CommandParameter="{Binding}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Rectangle>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!--Thumb Cursor="ScrollWE" Width="5" 
            <Thumb Cursor="ScrollWE"
                   Width="7"
                   Margin="0 0 -7 0"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Right">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="DragDelta">
                        <catel:EventToCommand Command="{Binding PanelResizeDragCommand}"
                                              PassEventArgsToCommand="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Thumb.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Stretch"
                              Background="Transparent">
                            <UniformGrid Columns="1"
                                         Height="30"
                                         Background="Transparent">
                                <Ellipse StrokeThickness="0"
                                         Fill="{StaticResource HighlightColor}"
                                         Height="3"
                                         Width="3" />
                                <Ellipse StrokeThickness="0"
                                         Fill="{StaticResource HighlightColor}"
                                         Height="3"
                                         Width="3" />
                                <Ellipse StrokeThickness="0"
                                         Fill="{StaticResource HighlightColor}"
                                         Height="3"
                                         Width="3" />
                            </UniformGrid>
                        </Grid>
                    </ControlTemplate>
                </Thumb.Template>
            </-->

        </Grid>
    </Border>
</catel:UserControl>