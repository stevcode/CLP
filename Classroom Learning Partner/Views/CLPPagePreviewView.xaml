<catel:UserControl x:Class="Classroom_Learning_Partner.Views.CLPPagePreviewView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:Views="clr-namespace:Classroom_Learning_Partner.Views"
                   x:Name="CLPPagePreview">

    <Viewbox Stretch="Uniform">

        <InkCanvas x:Name="MainInkCanvas" Background="White"
                   Width="{Binding PageWidth}" Height="{Binding PageHeight}"                  
                   Strokes="{Binding InkStrokes}"
                   EditingMode="None"
                   EditingModeInverted="None"
                   >
        </InkCanvas>

    </Viewbox>

</catel:UserControl>
