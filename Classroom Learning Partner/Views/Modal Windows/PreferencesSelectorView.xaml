<catel:DataWindow x:Class="Classroom_Learning_Partner.Views.PreferencesSelectorView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:customControls="clr-namespace:CLP.CustomControls;assembly=CLP.CustomControls"
                   xmlns:viewModels="clr-namespace:Classroom_Learning_Partner.ViewModels"
                   xmlns:converters="clr-namespace:Classroom_Learning_Partner.Converters"
                  Height="1000">
    <ScrollViewer><!-- no scroll for report-->
        <StackPanel>
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Button" Grid.Row="0" Grid.Column="0" FontWeight="Bold" />
                <TextBlock Text="Teacher" Grid.Row="0" Grid.Column="1" FontWeight="Bold" />
                <TextBlock Text="Student" Grid.Row="0" Grid.Column="2" FontWeight="Bold" />
                <TextBlock Text="Projector" Grid.Row="0" Grid.Column="3" FontWeight="Bold" />
            </Grid>
            <ItemsControl ItemsSource="{Binding PreferenceCheckboxes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel>
                        </StackPanel>
                    </ItemsPanelTemplate>

                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding PrettyName}" Grid.Row="0" Grid.Column="0" />
                                <CheckBox Margin="0, 0, 0, 0" IsChecked="{Binding IsVisibleOnTeacher}" Grid.Row="0" Grid.Column="1" />
                                <CheckBox Margin="0, 0, 0, 0" IsChecked="{Binding IsVisibleOnStudent}" Grid.Row="0" Grid.Column="2" />
                                <CheckBox Margin="0, 0, 0, 0" IsChecked="{Binding IsVisibleOnProjector}" Grid.Row="0" Grid.Column="3" />
                            </Grid>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </StackPanel>
    </ScrollViewer>

</catel:DataWindow>
