<Window x:Class="Classroom_Learning_Partner.Views.Modal_Windows.NotebookMetadataWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:catel="http://catel.codeplex.com"
        xmlns:ViewModels="clr-namespace:Classroom_Learning_Partner.ViewModels"
        Title="Set Notebook Curriculum" Height="120" Width="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- curriculum-->
            <RowDefinition />
            <!-- ok-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!--label-->
            <ColumnDefinition />
            <!--input-->
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Curriculum" HorizontalAlignment="Right" />
        <TextBox Grid.Row="0" Grid.Column="1" Name="Curriculum" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button IsDefault="True" Content="OK" Width="100" Height="30" Margin="5" Click="OKButton_Click"/>
            <Button IsCancel="True" Content="Cancel" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>