<catel:UserControl x:Class="Classroom_Learning_Partner.Views.CLPTextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Classroom_Learning_Partner.Resources"
             xmlns:catel="http://catel.codeplex.com"
             xmlns:Views="clr-namespace:Classroom_Learning_Partner.Views">
    <UserControl.Resources>
        <conv:ThicknessConverter x:Key="ThicknessConverter"/>
    </UserControl.Resources>

    <Views:BindableRichTextBox x:Name="TextBox" Background="Transparent"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        TextBlock.LineHeight="1.0" TextBlock.LineStackingStrategy="MaxHeight"
        RTFText="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
        Width="{Binding Path=Width}" Height="{Binding Path=Height}" Padding="10"
        BorderThickness="{Binding Source={x:Static Application.Current},Path=MainWindowViewModel.AuthoringTabVisibility,Converter={StaticResource ThicknessConverter}}">
    </Views:BindableRichTextBox>

</catel:UserControl>
