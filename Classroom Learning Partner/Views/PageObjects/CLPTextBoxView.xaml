<catel:UserControl x:Class="Classroom_Learning_Partner.Views.PageObjects.CLPTextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:Classroom_Learning_Partner.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:catel="http://catel.codeplex.com"
             xmlns:vmo="clr-namespace:Classroom_Learning_Partner.ViewModels.PageObjects"
             xmlns:vwo="clr-namespace:Classroom_Learning_Partner.Views.PageObjects">
    <UserControl.Resources>
        <conv:ThicknessConverter x:Key="ThicknessConverter"/>
    </UserControl.Resources>

    <RichTextBox x:Name="TextBox"
        ScrollViewer.VerticalScrollBarVisibility="Auto" Background="Transparent"
        FontSize="24"
        FontFamily="Arial"
        SelectionChanged="RichTextBox_SelectionChanged"
        vwo:CLPTextBoxView.DocumentXaml="{Binding Text}"
        Width="{Binding Path=Width}" Height="{Binding Path=Height}" BorderThickness="{Binding Source={x:Static Application.Current},Path=MainWindowViewModel.AuthoringTabVisibility,Converter={StaticResource ThicknessConverter}}"
        Padding="10" />

</catel:UserControl>
