<catel:UserControl x:Class="Classroom_Learning_Partner.Views.LocationBrowserWorkspaceView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:views="clr-namespace:Classroom_Learning_Partner.Views">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Left"
                       Text="{Binding HeaderText}" />
            
            <Button Content="{Binding FolderPath}" />
        </StackPanel>

        <views:CacheSelectorView Grid.Row="1" />
        
    </Grid>
</catel:UserControl>
