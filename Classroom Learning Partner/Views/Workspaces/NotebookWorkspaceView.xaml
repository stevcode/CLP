<catel:UserControl x:Class="Classroom_Learning_Partner.Views.NotebookWorkspaceView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                   xmlns:conv="clr-namespace:Classroom_Learning_Partner.Resources"
                   xmlns:Views="clr-namespace:Classroom_Learning_Partner.Views">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/MainWindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <catel:BooleanToCollapsingVisibilityConverter x:Key="BoolConverter"/>
            <catel:IntToStringConverter x:Key="IntToString" />
            <conv:ProjectedDisplayBackgroundConverter x:Key="BackgroundConverter" />
            <conv:LastItemInCollectionConverter x:Key="LastItem" />

            <!-- NotebookPage with the Trigger for Selected -->
            <Style x:Key="NotebookPageSidebarContainer" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <Grid Margin="0,2,0,2">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label x:Name="PageIndex"  Grid.Column="0" 
                                       Content="{Binding PageIndex}"
                                       Margin="8,0,0,0"
                                       Foreground="Black" FontSize="12" />

                                <!--Notebook Page-->
                                <Border x:Name="SelectedBorder" Grid.Column="1"
                                        BorderThickness="2"
                                        BorderBrush="Transparent"
                                        Margin="4">
                                    <Border x:Name="PageBorder"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource GrayBorderColor}">
                                        <ContentPresenter />
                                    </Border>
                                </Border>

                                <!--Where buttons that reveal submissions are located-->
                                <Grid Margin="0,0,8,0" Grid.Column="2" VerticalAlignment="Center" Visibility="{Binding Source={x:Static Application.Current}, Path=MainWindowViewModel.Ribbon.InstructorVisibility}" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <ToggleButton x:Name="toggle" Height="50" Width="25" Grid.Row="0" Click="ToggleButton_Click" >
                                        <Image Source="..\..\Images\DisplaySubmissionsButton.png" />
                                    </ToggleButton>
                                    <Label Grid.Row="1" Content="{Binding NumberOfSubmissions, Mode=OneWay, Converter={StaticResource IntToString}}" HorizontalContentAlignment="Center" Width="25" />
                                    <!--<ToggleButton Margin="0,10,0,0" x:Name="toggleGroups" Height="50" Width="25" Grid.Row="2" Click="ToggleButton_Click" >
                                        <Image Source="..\..\Images\DisplayGroupSubmissionsButton.png" />
                                    </ToggleButton>
                                    <Label Grid.Row="3" Content="{Binding NumberOfGroupSubmissions, Mode=OneWay, Converter={StaticResource IntToString}}" HorizontalContentAlignment="Center" Width="25" />-->
                                    </Grid>

                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="SelectedBorder" Property="BorderBrush" Value="{StaticResource MainColor}" />
                                    <Setter TargetName="PageBorder" Property="BorderBrush" Value="{StaticResource MainColor}" />
                                    <Setter TargetName="PageIndex" Property="Foreground" Value="{StaticResource MainColor}" />
                                    <Setter TargetName="PageIndex" Property="FontWeight" Value="Bold" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- HistoryPages style -->
            <Style x:Key="HistoryPagesContainer" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <Grid Margin="0,2,0,2">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!--History Page-->
                                <Border x:Name="SelectedBorder" Grid.Column="0"
                                        BorderThickness="2"
                                        BorderBrush="Transparent"
                                        Margin="4">
                                    <Border x:Name="PageBorder"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource GrayBorderColor}">
                                        <ContentPresenter />
                                    </Border>
                                </Border>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="SelectedBorder" Property="BorderBrush" Value="DarkOrange" />
                                    <Setter TargetName="PageBorder" Property="BorderBrush" Value="DarkOrange" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{Binding WorkspaceBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" x:Name="NotebookPageColumn" />
                <ColumnDefinition Width="Auto" x:Name="NotebookPageSplitterColumn"/>

                <ColumnDefinition MinWidth="200" Width="Auto" x:Name="SubmissionColumn"/>
                <ColumnDefinition Width="Auto" x:Name="SubmissionSplitterColumn" />

                <ColumnDefinition Width="*" MinWidth="150"/>

                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--Left Panel-->
            <!--<ContentControl Grid.Column="0"
                            DataContext="{Binding LeftPanel, Mode=OneWay}">
                <ContentControl.Resources>

                    <ControlTemplate x:Key="NotebookPagesPanelTemplate">
                        <Views:NotebookPagesPanelView Visibility="{Binding IsVisible, Converter={StaticResource BoolConverter}}" />
                    </ControlTemplate>

                </ContentControl.Resources>

                <ContentControl.Style>
                    <Style TargetType="{x:Type ContentControl}">
                        <Style.Triggers>

                            NotebookPagesPanel trigger
                            <DataTrigger Binding="{Binding PanelName}" Value="NotebookPagesPanel">
                                <Setter Property="Template" Value="{StaticResource NotebookPagesPanelTemplate}" />
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>-->

            <!-- Notebook Pages-->
            <Border x:Name="NotebookPagesBorder" Grid.Column="0" Background="#F3F3F3">
                <ListBox x:Name="NotebookPageListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" VirtualizingStackPanel.VirtualizationMode="Recycling"
                            MinWidth="150" Width="{Binding ElementName=NotebookPagesBorder, Path=ActualWidth, Mode=OneWay}" 
                            ItemsSource="{Binding Path=NotebookPages}"
                            ItemContainerStyle="{StaticResource NotebookPageSidebarContainer}"
                            SelectionMode="Single">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseDown">
                                        <catel:EventToCommand Command="{Binding Path=DataContext.SetCurrentPageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Views:CLPPagePreviewView DataContext="{Binding}" x:Name="preview" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Border>

            <GridSplitter x:Name="NotebookPagesSplitter" Grid.Column ="1" Background="#D4D4D4" Width="5"
         HorizontalAlignment="Center" VerticalAlignment="Stretch" Visibility="{Binding SideThumbnailsVisible, Converter={StaticResource BoolConverter}}"
         />

            <Views:FilteredPagesSideBar x:Name="FilterSideBar" Grid.Column="2" Visibility="Collapsed" />

            <GridSplitter x:Name="SubmissionPagesSplitter" Grid.Column ="3" Background="#D4D4D4" Width="5"
        HorizontalAlignment="Center" VerticalAlignment="Stretch" Visibility="Collapsed"/>

            <!-- Control that dynamically determines what Display to show -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition MinHeight="150" Height="*"/>
                    <RowDefinition Height="Auto" x:Name="HistoryButtonRow"/>
                    <RowDefinition Height="Auto" x:Name="HistoryPanelRow"/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <Border x:Name="NotebookPagesBorder1" Grid.Row="0" MinHeight="120" Background="#F3F3F3" Visibility="{Binding TopThumbnailsVisible, Converter={StaticResource BoolConverter}}">
                    <ListBox x:Name="NotebookPageListBox1" VirtualizingStackPanel.VirtualizationMode="Recycling"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        MinHeight="120"
                        Height="{Binding ElementName=NotebookPagesBorder1, Path=ActualHeight, Mode=OneWay}" 
                        ItemsSource="{Binding Path=NotebookPages}"
                        ItemContainerStyle="{StaticResource NotebookPageSidebarContainer}"
                        SelectionMode="Single">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0" Height="Auto">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <catel:EventToCommand Command="{Binding Path=DataContext.SetCurrentPageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Views:CLPPagePreviewView DataContext="{Binding}" x:Name="preview" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                    </ListBox>
                </Border>
                <GridSplitter Grid.Row ="1" Background="#D4D4D4" Height="5" HorizontalAlignment="Stretch" Visibility="{Binding TopThumbnailsVisible, Converter={StaticResource BoolConverter}}"/>
                <ContentControl Grid.Row="2" DataContext="{Binding SelectedDisplay, Mode=OneWay}" x:Name="Display" >

                    <ContentControl.Resources>

                        <ControlTemplate x:Key="LinkedDisplayTemplate">
                            <Views:LinkedDisplayView />
                        </ControlTemplate>

                        <ControlTemplate x:Key="GridDisplayTemplate">
                            <Views:GridDisplayView />
                        </ControlTemplate>

                    </ContentControl.Resources>

                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Style.Triggers>

                                <!-- LinkedDisplay trigger -->
                                <DataTrigger Binding="{Binding DisplayName}" Value="LinkedDisplay">
                                    <Setter Property="Template" Value="{StaticResource LinkedDisplayTemplate}" />
                                </DataTrigger>

                                <!-- GridDisplay trigger -->
                                <DataTrigger Binding="{Binding DisplayName}" Value="GridDisplay">
                                    <Setter Property="Template" Value="{StaticResource GridDisplayTemplate}" />
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <Border Grid.Row="3" Height="30" Background="#F3F3F3" Visibility="{Binding Source={x:Static Application.Current}, Path=MainWindowViewModel.Ribbon.StudentVisibility}">
                    <Button Width="125"  BorderThickness="0" Margin="15,0,0,0" HorizontalAlignment="Left" Click="ToggleSubmissionHistory">
                        <TextBlock x:Name="SubmissionHistoryButton">Open Page History</TextBlock>
                    </Button>
                </Border>
                <!-- History Pages -->
                <Grid Grid.Row="4" x:Name="SubmissionHistoryGrid" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" MinWidth="150"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border x:Name="SubmissionCurrentPageBorder" Grid.Column="0" Height="120" Background="#F3F3F3" BorderThickness="0,5,5,0" BorderBrush="#D4D4D4">
                        <ListBox x:Name="SubmissionCurrentPageList" VirtualizingStackPanel.VirtualizationMode="Recycling"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            MinHeight="137"
                            Height="{Binding ElementName=SubmissionCurrentPageBorder, Path=ActualHeight, Mode=OneWay}" 
                            ItemsSource="{Binding Path=HistoryCurrentPage}"
                            ItemContainerStyle="{StaticResource HistoryPagesContainer}"
                            SelectionMode="Single"
                                 Background="#DDDDDD">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0" Height="Auto">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseDown">
                                                <catel:EventToCommand Command="{Binding Path=DataContext.SetCurrentPageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Views:CLPPagePreviewView DataContext="{Binding}" x:Name="preview" />
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Border>
                    <Border x:Name="SubmissionHistoryBorder" Grid.Column="1" Height="120" Background="#F3F3F3" BorderThickness="0,5,0,0" BorderBrush="#D4D4D4">
                        <ListBox x:Name="SubmissionHistoryPanel" VirtualizingStackPanel.VirtualizationMode="Recycling"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            MinHeight="120"
                            Height="{Binding ElementName=SubmissionHistoryBorder, Path=ActualHeight, Mode=OneWay}" 
                            ItemsSource="{Binding Path=HistoryPages}"
                            ItemContainerStyle="{StaticResource HistoryPagesContainer}"
                            SelectionMode="Single"
                                 Background="#DDDDDD">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0" Height="Auto">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseDown">
                                                <catel:EventToCommand Command="{Binding Path=DataContext.SetCurrentPageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" PassEventArgsToCommand="True" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Views:CLPPagePreviewView DataContext="{Binding}" x:Name="preview" />
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                        </ListBox>
                    </Border>
                </Grid>
            </Grid>

            <ContentControl Grid.Column="5"
                            DataContext="{Binding RightPanel, Mode=OneWay}">
                <ContentControl.Resources>

                    <ControlTemplate x:Key="WebcamPanelTemplate">
                        <Views:WebcamPanelView Visibility="{Binding IsVisible, Converter={StaticResource BoolConverter}}" />
                    </ControlTemplate>

                    <ControlTemplate x:Key="DisplayListPanelTemplate">
                        <Views:DisplayListPanelView Visibility="{Binding IsVisible, Converter={StaticResource BoolConverter}}" />
                    </ControlTemplate>

                </ContentControl.Resources>

                <ContentControl.Style>
                    <Style TargetType="{x:Type ContentControl}">
                        <Style.Triggers>

                            <!-- WebcamPanel trigger -->
                            <DataTrigger Binding="{Binding PanelName}" Value="WebcamPanel">
                                <Setter Property="Template" Value="{StaticResource WebcamPanelTemplate}" />
                            </DataTrigger>

                            <!-- DisplayListPanel trigger -->
                            <DataTrigger Binding="{Binding PanelName}" Value="DisplayListPanel">
                                <Setter Property="Template" Value="{StaticResource DisplayListPanelTemplate}" />
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

        </Grid>

        <StatusBar Grid.Row="1" VerticalAlignment="Bottom" Background="#2F64B9" Height="23" Padding="0" Margin="0" BorderThickness="0">
            <StatusBar.Resources>
                <Style BasedOn="{StaticResource StatusBarText}" TargetType="{x:Type TextBlock}" />
            </StatusBar.Resources>

            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock>
                    <Run Text="PAGE " />
                    <Run Text="{Binding CurrentPage.PageIndex}" />
                    <Run Text=" OF " />
                    <Run Text="{Binding NotebookPages.Count, Mode=OneWay}" />
                </TextBlock>
            </StatusBarItem>

            <Separator Grid.Column="1" />

