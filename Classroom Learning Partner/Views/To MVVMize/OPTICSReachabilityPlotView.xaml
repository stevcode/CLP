<Window x:Class="Classroom_Learning_Partner.Views.OPTICSReachabilityPlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Title="OPTICS Reachability Plot"
             Height="300"
             Width="800">
    <Grid x:Name="chartGrid" 
          Margin="0"
          ClipToBounds="True"
          Background="Transparent"
          SizeChanged="ChartGrid_OnSizeChanged">
        <Border Margin="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="White">
            <Canvas x:Name="chartCanvas"
                    MouseMove="ChartCanvas_OnMouseMove"
                    Margin="0"
                    ClipToBounds="True"
                    Background="Transparent" />
        </Border>
    </Grid>
</Window>
